{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++buildWerror",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Werror",
				"-std=c++14",
				"assembler.cpp",
				"-o",
				"assembler"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}